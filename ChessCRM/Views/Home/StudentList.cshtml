@model StudentListViewModel
@{
    ViewBag.Title = "Chess Academy Students";
}
<div>
    <h2>All Students (@Model.SortedAll.Size.ToString())</h2>
</div>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>US Chess ID</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.SortedAll.Size; i++)
            {
                <tr>
                    <td>@Model.SortedAll.Students[i].Fname</td>
                    <td>@Model.SortedAll.Students[i].Lname</td>
                    <td>@Model.SortedAll.Students[i].UschessID</td>
                    <td>@Model.SortedAll.Students[i].Dob</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<div>
    <h2>Active Students (@Model.SortedActive.Size.ToString())</h2>
</div>
<div>
