@model EnrollmentViewModel
@{
    ViewBag.Title = "Current Enrollment";
}
<div>
    <h2>Current Enrollment</h2>
</div>
<div>
    <h3>@Model.Product.ProductName</h3>
</div>
<div>
    <p>@Model.Product.StartDateTime.ToString()</p>
</div>
<div>
    <a asp-controller="home" asp-action="evaluateclass" asp-route-input="@Model.Product.ProductID.ToString()">Evaluate</a>
</div>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>US Chess ID</th>
                <th>Registration Date</th>
                <th>Paid</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.Fname</td>
                    <td>@student.Lname</td>
                    <td></td>
                    <td>@student.UschessID</td>
                </tr>
            }
        </tbody>
    </table>
</div>